<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textColor">#FCFCFD</item>
    </style>

    <style name="imagebutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_25sdp</item>
        <item name="android:elevation">25dp</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize8Percent" parent="">
        <item name="cornerSize">@dimen/_5sdp</item>
    </style>
    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">@dimen/_20sdp</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_12sdp</item>
        <item name="android:layout_marginTop">@dimen/_45sdp</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:textColor">#292C3D</item>
        <item name="android:textSize">@dimen/_23ssp</item>
    </style>

    <style name="subtitle_style">
        <item name="android:layout_width">@dimen/_130sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textColor">#292C3D</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="recyclerItemCity">
        <item name="android:layout_width">@dimen/_105sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_59sdp</item>
        <item name="android:fontFamily">@font/source_sans_pro_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FCFCFD</item>
        <item name="android:textSize">@dimen/_14ssp</item>
    </style>

    <style name="recyclerItemCountry">
        <item name="android:layout_width">@dimen/_105sdp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/_5sdp</item>
        <item name="android:layout_marginTop">@dimen/_3sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FCFCFD</item>
        <item name="android:textSize">@dimen/_12ssp</item>
    </style>

    <style name="DealsTabStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="fontFamily">@font/source_sans_pro_bold</item>
        <item name="textAllCaps">false</item>
    </style>


</resources>